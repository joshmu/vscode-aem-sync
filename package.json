{
	"name": "vscode-aem-sync",
	"displayName": "VSCode AEM Sync",
	"description": "Sync files, folders, nodes to AEM",
	"publisher": "yamato-ltd",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/yamato-ltd/vscode-aem-sync.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/jcr_root/**"
	],
	"main": "src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.aempush",
				"title": "Export to AEM Server"
			},
			{
				"command": "extension.aempull",
				"title": "Import from AEM Server"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.aempush",
					"group": "AEM@100"
				},
				{
					"command": "extension.aempull",
					"group": "AEM@100"
				}
			],
			"explorer/context": [
				{
					"command": "extension.aempush",
					"group": "AEM@100"
				},
				{
					"command": "extension.aempull",
					"group": "AEM@100"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "AEM-Sync configuration",
			"properties": {
				"aemsync.server": {
					"type": "string",
					"default": "http://localhost:4502",
					"description": "Server URL"
				},
				"aemsync.user": {
					"type": "string",
					"default": "admin",
					"description": "Username"
				},
				"aemsync.password": {
					"type": "string",
					"default": "admin",
					"description": "Password"
				},
				"aemsync.autopush": {
					"type": "boolean",
					"default": false,
					"description": "Automitically synchronize file-system changes to server"
				},
				"aemsync.acceptSelfSignedCert": {
					"type": "boolean",
					"default": false,
					"description": "Accept self-signed certificates for HTTPs"
				}
			}
		}
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
		"request": "~2.74.0",
		"adm-zip": "~> 0.4.11",
		"q": "1.0.1",
		"glob": "3.2.9",
		"fs-extra": "5.0.0",
		"xmldom": "0.1.19",
		"xpath": "0.0.7",
		"unzip": "0.1.9",
		"archiver": "0.10.1"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"eslint": "^5.13.0",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}
