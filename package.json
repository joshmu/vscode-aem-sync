{
	"name": "vscode-aem-sync",
	"displayName": "vscode-aem-sync",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/jcr_root/**"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.aempush",
				"title": "Export to AEM Server"
			},
			{
				"command": "extension.aempull",
				"title": "Import from AEM Server"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.aempush",
					"group": "AEM@100"
				},
				{
					"command": "extension.aempull",
					"group": "AEM@100"
				}
			],
			"explorer/context": [
				{
					"command": "extension.aempush",
					"group": "AEM@100"
				},
				{
					"command": "extension.aempull",
					"group": "AEM@100"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "AEM-Sync configuration",
			"properties": {
				"aemsync.server": {
					"type": "string",
					"default": "http://localhost:4502",
					"description": "The port to connect to AEM with"
				},
				"aemsync.username": {
					"type": "string",
					"default": "admin",
					"description": "The username to use to connect to AEM"
				},
				"aemsync.password": {
					"type": "string",
					"default": "admin",
					"description": "The password to use to connect to AEM"
				},
				"aemsync.autopush": {
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
		"request": "~2.74.0",
		"adm-zip": "~> 0.4.11",
		"q": "1.0.1",
		"glob": "3.2.9",
		"fs-extra": "5.0.0",
		"xmldom": "0.1.19",
		"xpath": "0.0.7",
		"unzip": "0.1.9",
		"archiver": "0.10.1"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"eslint": "^5.13.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	}
}
